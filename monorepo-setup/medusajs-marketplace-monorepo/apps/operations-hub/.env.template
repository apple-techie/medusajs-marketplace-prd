# Operations Hub Environment Variables

# Next.js
NODE_ENV=development

# MedusaJS Backend
NEXT_PUBLIC_MEDUSA_BACKEND_URL=http://localhost:9000
MEDUSA_BACKEND_URL=http://localhost:9000

# MedusaJS Admin Secret Key (for admin operations)
# This should be the admin secret key, NOT the publishable key
# Get this from your Medusa backend environment or admin panel
MEDUSA_ADMIN_SECRET_KEY=your_admin_secret_key_here

# Operations Hub Specific
NEXT_PUBLIC_APP_NAME="Operations Hub"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_REAL_TIME_UPDATES=false
